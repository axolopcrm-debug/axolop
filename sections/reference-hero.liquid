{%- style -%}
  {% if section.settings.transparent_header %}
    .hero-{{ section.id }} {
      margin-top: calc(var(--header-height) * -1);
      --additional-padding: var(--header-height);
    }
    .section-header:not(.scrolled-past-header) .header-wrapper {
      background: none;
      transition: background 0.2s;
      border-bottom: none;
    }
    .section-header:not(.scrolled-past-header) .header__icon,
    .section-header:not(.scrolled-past-header) .header__menu-item--main {
      --color-foreground: var(--color-base-{{ section.settings.transparent_header_text_color }});
      transition: color 0.2s;
    }
    .section-header:not(.scrolled-past-header) .header__menu-item--main:hover {
      --color-foreground: var(--color-base-{{ section.settings.transparent_header_hover_link_color }});
      color: rgb(var(--color-foreground));
    }
    .section-header:not(.scrolled-past-header) .header-wrapper .header__active-menu-item-v2 {
      --color-background: var(--color-base-{{ section.settings.transparent_header_text_color }});
      --color-foreground: var(--color-base-{{ section.settings.transparent_header_highlighted_link_color }});
      transition: background 0.2s, color 0.2s;
    }
    {% if section.settings.transparent_header_logo == 'secondary' %}
      .section-header:not(.scrolled-past-header) .header-wrapper .header__heading-logo--main {
        display: none;
      }
      .section-header:not(.scrolled-past-header) .header-wrapper .header__heading-logo--secondary {
        display: inline-block;
      }
    {% endif %}
  {% endif %}
  {% if section.settings.hide_announcement_bars %}
    .shopify-section-group-header-group .horizontal-ticker, .shopify-section-group-header-group .announcement-bar {
      display: none !important;
    }
  {% endif %}

  .section-{{ section.id }}-padding {
    padding-top: calc({{ section.settings.padding_top | times: 0.75 | round: 0 }}px + var( --additional-padding));
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  .hero-{{ section.id }} .hero__content-container {
    {% if section.settings.min_mobile_height_type == 'pixels' %}
      min-height: {{ section.settings.mobile_pixels_height }}px;
    {% elsif section.settings.min_mobile_height_type == '100vh' %}
      min-height: 100vh;
    {% endif %}
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: calc({{ section.settings.padding_top }}px + var( --additional-padding));
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
    .hero-{{ section.id }} .hero__content-container {
      {% if section.settings.min_desktop_height_type == 'pixels' %}
        min-height: {{ section.settings.desktop_pixels_height }}px;
      {% elsif section.settings.min_desktop_height_type == '100vh' %}
        min-height: 100vh;
      {% endif %}
    }
  }

  .hero-{{ section.id }} {
    background: {{ section.settings.background_color }};
    position: relative;
    overflow: hidden;
  }

  .hero-{{ section.id }} .hero__background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
  }

  .hero-{{ section.id }} .hero__background img,
  .hero-{{ section.id }} .hero__background video {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .hero-{{ section.id }} .hero__overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: {{ section.settings.overlay_color }};
    opacity: {{ section.settings.overlay_opacity | divided_by: 100.0 }};
    z-index: 2;
  }

  .hero-{{ section.id }} .hero__content-container {
    position: relative;
    z-index: 3;
    display: flex;
    align-items: {{ section.settings.content_vertical_position }};
    justify-content: {{ section.settings.content_horizontal_position }};
    text-align: {{ section.settings.content_text_alignment }};
  }

  .hero-{{ section.id }} .hero__content {
    max-width: {{ section.settings.content_max_width }}px;
    width: 100%;
  }

  @media screen and (max-width: 749px) {
    .hero-{{ section.id }} .hero__content-container {
      align-items: {{ section.settings.mobile_content_vertical_position }};
      text-align: {{ section.settings.mobile_content_text_alignment }};
    }
  }
{%- endstyle -%}

<div
  class="hero hero-{{ section.id }} animate-section animate--hidden {{ section.settings.visibility }}"
  style="--columns-desktop:1;--columns-mobile:1;--gap-desktop:0px;--gap-mobile:0px;"
>
  {% if section.settings.background_image != blank or section.settings.background_video != blank %}
    <div class="hero__background">
      {% if section.settings.background_video != blank %}
        <video
          width="100%"
          height="auto"
          preload="metadata"
          poster="{{ section.settings.background_video.preview_image | image_url }}"
          loop
          muted
          playsinline
          disablepictureinpicture
          autoplay
        >
          {% for source in section.settings.background_video.sources %}
            <source
              data-src="{{ source.url }}"
              type="{{ source.mime_type }}"
            >
          {% endfor %}
        </video>
      {% else %}
        {%- liquid
          assign image_height = section.settings.background_image.width | divided_by: section.settings.background_image.aspect_ratio
          assign sizes = '100vw'
        -%}
        {{
          section.settings.background_image
          | image_url: width: 3840
          | image_tag:
            loading: 'auto',
            width: section.settings.background_image.width,
            height: image_height,
            sizes: sizes,
            widths: '375, 550, 750, 1100, 1500, 1780, 2000, 3000, 3840',
            class: 'hero__background__media'
        }}
      {% endif %}
      <div class="hero__overlay"></div>
    </div>
  {% endif %}

  <div class='hero__content-container page-width{% if section.settings.full_page_width %} page-width--full{% endif %} section-{{ section.id }}-padding'>
    <div class="hero__content color-scheme-{{ section.id }} color-{{ section.settings.color_scheme }} animate-item">
      {% if section.settings.heading_prefix != blank %}
        <p class="hero__heading-prefix {{ section.settings.heading_prefix_size }}">
          {{ section.settings.heading_prefix }}
        </p>
      {% endif %}
      
      {% if section.settings.heading != blank %}
        <h1 class="hero__heading {{ section.settings.heading_size }} title-with-highlight" style='--hightlight-color:{{ section.settings.title_highlight_color }}'>
          {{ section.settings.heading }}
        </h1>
      {% endif %}
      
      {% if section.settings.heading_suffix != blank %}
        <p class="hero__heading-suffix {{ section.settings.heading_prefix_size }}">
          {{ section.settings.heading_suffix }}
        </p>
      {% endif %}
      
      {% if section.settings.text != blank %}
        <div class="hero__text rte">
          {{ section.settings.text }}
        </div>
      {% endif %}
      
      {% unless section.settings.button_label_1 == blank and section.settings.button_label_2 == blank %}
        <div class="hero__buttons">
          {%- if section.settings.button_label_1 != blank -%}
            <a
              {% if section.settings.button_link_1 == blank %}
                role="link" aria-disabled="true"
              {% else %}
                href="{{ section.settings.button_link_1 }}"
              {% endif %}
              class="button{% if section.settings.button_style_secondary_1 %} button--secondary{% else %} button--primary{% endif %}"
            >
              {{- section.settings.button_label_1 | escape -}}
            </a>
          {%- endif -%}
          {%- if section.settings.button_label_2 != blank -%}
            <a
              {% if section.settings.button_link_2 == blank %}
                role="link" aria-disabled="true"
              {% else %}
                href="{{ section.settings.button_link_2 }}"
              {% endif %}
              class="button{% if section.settings.button_style_secondary_2 %} button--secondary{% else %} button--primary{% endif %}"
            >
              {{- section.settings.button_label_2 | escape -}}
            </a>
          {%- endif -%}
        </div>
      {% endunless %}
    </div>
  </div>
</div>

