{% comment %}
  Font imports and base typography styles for AXOLOP
  Includes Montserrat and JetBrains Mono
{% endcomment %}

<!-- Font imports -->
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;600;700&family=JetBrains+Mono:wght@400;500;600&family=Lexend+Giga:wght@400;500;600;700;800;900&display=swap" rel="stylesheet">

<style>
  :root {
    --font-primary: 'Montserrat', -apple-system, BlinkMacSystemFont, sans-serif;
    --font-heading: 'Lexend Giga', -apple-system, BlinkMacSystemFont, sans-serif;
    --font-mono: 'JetBrains Mono', 'SF Mono', Monaco, 'Cascadia Code', monospace;
  }
  
  body {
    font-family: var(--font-primary);
    font-weight: 400;
    line-height: 1.6;
  }
  
  h1, h2, h3, h4, h5, h6 {
    font-family: var(--font-heading);
    font-weight: 800;
    letter-spacing: -0.15em;
    line-height: 1.2;
  }
  
  code, pre {
    font-family: var(--font-mono);
  }
</style>
